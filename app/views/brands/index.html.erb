<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Products</h3>
          <div class="pull-right">
            <span class="clickable filter" data-toggle="tooltip" title="Toggle filter" data-container="body">
              <i class="glyphicon glyphicon-filter"></i>
            </span>
          </div>
        </div>
        <div class="panel-body">
          <input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filter Products" />
        </div>
        <table class="table table-hover" id="dev-table">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @brands.each do |brand| %>
              <tr data-id="<%= brand.id %>">
                <td data-id="<%= brand.id %>" onClick="goToBrand(this);"><%= brand.id %></td>
                <td><%= brand.name %></td>
                <td><%= link_to icon('pencil'), edit_brand_path(brand), remote: true %></td>
                <td><%= link_to icon('trash-o'), brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to 'New Brand', new_brand_path, remote: true, :class => 'btn btn-primary new' %>
  </div>
  <div class="row">
    <div id="new-brand" style="display:none;"></div>
  </div>
</div>