<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Products</h3>
          <div class="pull-right">
            <span class="clickable filter" data-toggle="tooltip" title="Toggle filter" data-container="body">
              <i class="glyphicon glyphicon-filter"></i>
            </span>
          </div>
        </div>
        <div class="panel-body">
          <input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filter Products" />
        </div>
        <table class="table table-hover" id="dev-table">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Brand</th>
              <th>Description</th>
              <th>Price</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr data-id="<%= product.id %>" onClick="goToProduct(this)">
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= product.brand.name %></td>
                <td><%= product.description %></td>
                <td><%= product.price %></td>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to 'New Product', new_product_path, :class => 'btn btn-primary new' %>
  </div>
</div>
